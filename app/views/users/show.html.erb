<%= render "shared/header" %>

<div class="user_show">
  <div class="user_show__product">
    <div class="show_title">
      出品一覧
    </div>
    <div class='item-contents'>
    <ul class='item-lists'>
    <% @items.each do |item| %>

      <%# 商品のインスタンス変数になにか入っている場合、中身のすべてを展開できるようにしましょう %>
      <li class='list'>
        <%= link_to item_path(item.id), method: :get do %>
        <div class='item-img-content'>
          <%= image_tag item.images[0], class: "item-img" %>

          <%# 商品が売れていればsold outの表示 %>
          <% if item.item_order != nil %>
          <div class='sold-out'>
            <span>Sold Out!!</span>
          </div>
          <% end %>
          <%# //商品が売れていればsold outの表示 %>

        </div>
        <div class='item-info'>
          <h3 class='item-name'>
            <%= item.name %>
          </h3>
        </div>
        <% end %>
      </li>
    <% end %>
  </div>
  <div class="users-item">
    <table class="detail-table">
      <tbody>
        <tr>
          <th class="detail-item">ニックネーム</th>
          <td class="detail-value"><%= @nickname %></td>
        </tr>
        <tr>
          <th class="detail-item">メールアドレス</th>
          <td class="detail-value"><%= current_user.email %></td>
        </tr>
        <tr>
          <th class="detail-item">生年月日</th>
          <td class="detail-value"><%= current_user.birthday %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="setting">
    <%= link_to '設定', edit_user_registration_path, method: :get, class: "item-red-btn" %>
  </div>

</div>
<%= render "shared/footer" %>